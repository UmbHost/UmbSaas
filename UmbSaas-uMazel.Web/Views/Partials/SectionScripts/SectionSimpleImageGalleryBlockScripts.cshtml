@inherits Umbraco.Web.Mvc.UmbracoViewPage<Umbraco.Core.Models.Blocks.BlockListItem>

@using ClientDependency.Core.Mvc

@{
    SectionSimpleImageGalleryBlock currSection = Model.Content as SectionSimpleImageGalleryBlock;
    SectionSimpleImageGalleryBlockSettings settings = Model.Settings as SectionSimpleImageGalleryBlockSettings;
}

    <script type="text/javascript">
    $(document).ready(function () {

        // Gria Element
        if ($(this).length > 0) {
            // ISOTOPE MASONRY ELEMENT  ||--------------
            var $container = $('#section_@currSection.Key .container-masonry');
            $container.imagesLoaded(function () {

                $container.isotope({
                    itemSelector: '.nf-item',
                    layoutMode: 'masonry',
                    filter: $('.container-filter .categories.filter-for-@currSection.Key').first().attr('data-filter'),
                    masonry: {
                        columnWidth: 0,
                        gutter: 0
                    },
                });
            });

            // ISOTOPE GRID ELEMENT  ||--------------
            var $container2 = $('#section_@currSection.Key .container-grid');
            $container2.imagesLoaded(function () {
                $container2.isotope({
                    itemSelector: '.nf-item',
                    layoutMode: 'fitRows',
                    filter: $('.container-filter .categories.filter-for-@currSection.Key').first().attr('data-filter')
                });

            });

        };

        // Masonry Element
        if ($(this).length > 0) {
            var container = $('.masonry');
            container.masonry({
                // columnWidth: 0,
                itemSelector: '.nf-item'
            });
        };

    });
    </script>
