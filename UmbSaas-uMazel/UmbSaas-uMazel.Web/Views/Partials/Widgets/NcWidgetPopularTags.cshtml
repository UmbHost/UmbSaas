@inherits Umbraco.Web.Mvc.UmbracoViewPage<IEnumerable<ITag>>

<h5>@ViewData["title"]</h5>
<hr>

@if (Model.Count()>0)
{
    <ul class="widget-tag">

        @foreach (var tag in Model)
        {
            string link = string.Concat(ViewData["bloglisturl"], "?t=", tag.Text);
            <li><a href="@link">@tag.Text</a></li>
        }
    </ul>
}