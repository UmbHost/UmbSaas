@inherits Umbraco.Web.Mvc.UmbracoViewPage<PageSiteMap>
@{
    Layout = null;
    PageSiteMap currPage = Model;
    Response.ContentType = "text/xml";
}<?xml version='1.0' encoding='UTF-8' ?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">
  @Html.Action(MVC.Sitemap.ActionNames.Index, MVC.Sitemap.Name, new { startNodeId = currPage.AncestorOrSelf(1).Id, culture = System.Threading.Thread.CurrentThread.CurrentUICulture.Name })
</urlset>